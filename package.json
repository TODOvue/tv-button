    "dev": "vite",
    "build": "vite build",
    "build:demo": "cp README.md public/ && VITE_BUILD_TARGET=demo vite build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@todovue/tv-demo": "^1.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "sass": "^1.0.0",
    "vite": "^6.0.0",
    "vite-plugin-css-injected-by-js": "^3.0.0",
    "vite-plugin-dts": "^4.0.0"
